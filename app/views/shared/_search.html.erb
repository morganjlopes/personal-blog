
<form class="input-group search-form", id="search-form" action='<%= defined?(action_url) ? action_url : url_for() %>'>
  <input type="hidden" name="scopes" value="<%= params[:scopes] %>">
  <input type="hidden" name="scope" value="<%= params[:scope] %>">
  <input type="hidden" name="layout" value="<%= params[:layout] %>">

  <input name='q' value='<%= params[:q] %>' class="form-control" type="search" placeholder="Enter your search..." aria-label="Search">

  
  <button class="<%= defined?(btn_classes) ? btn_classes : 'btn btn-outline-secondary' %>" type="submit" id="button-addon2">
    <i class="bi bi-search me-1"></i>
    Search
  </button>
</form>
