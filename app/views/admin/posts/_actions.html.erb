<div class="dropdown">
  <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    <i class="bi bi-three-dots"></i>
  </button>
  <ul class="dropdown-menu dropdown-menu-end">
    <li>
      <%= link_to new_admin_post_path(dup: post), class: 'dropdown-item' do %>
        <i class="bi bi-copy me-1"></i> Copy Post
      <% end %>
    </li>
    <li>
      <%= link_to edit_admin_post_path(post), class: 'dropdown-item' do %>
        <i class="bi bi-pencil me-1"></i> Edit Post
      <% end %>
    </li>
    <li><hr class="dropdown-divider"></li>
    <li>
      <%= link_to post, target: "_blank", class: 'dropdown-item' do %>
        <i class="bi bi-arrow-up-right-square me-1"></i> Public View
      <% end %>
    </li>
  </ul>
</div>
