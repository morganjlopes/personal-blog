<table class='table' id='posts'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>Publish Date</th>
      <th class='text-center'>Views</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.name, edit_admin_post_path(post) %></td>
        <td><%== post.websites.map { |w| w.name }.join('<br>') %></td>
        <td><%= format_date(post.published_at) %></td>
        <td class='text-center'><%= post.public_views.count %></td>
        <td class='text-end'>
          <%= render 'admin/posts/actions', post: post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>