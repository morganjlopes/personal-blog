<table class='table' id='posts'>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.name, [:admin, post] %></td>
        <td class='text-end'><%= link_to "Edit", edit_admin_post_path(post), class: 'btn btn-outline-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>